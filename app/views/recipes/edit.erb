<h2>Edit a Recipe</h2>



      <form action= "/recipes/<%=@recipe.id%>" method= "post">
      <input id="hidden" type="hidden" name="_method" value="PUT">

      <label for "name">Recipe Name: </label>
      <input type= "text" name="recipe[name]" value=<%= @recipe.name %>>
      <br>


      <label> Meal Type: </label>
      <% Genre.all.each do |type| %>
      <input type="radio" name="recipe[genre_id]"
      value="<%=type.id%>" <%='checked' if @recipe.genre == type %>>

      <%=type.genre_name%></input>
      <% end %>
      <br><br>




      <label for "main_ingrediant">Main Ingredient: </label>
      <input type= "text" name="recipe[main_ingrediant]" value=<%= @recipe.main_ingrediant %>>
      <br>
      <label for "ingredients">Ingredients:</label>
      <input type= "text" name="recipe[ingredients]" value= <%=@recipe.ingredients%>>
      <br>
      <label for "instructions">Instructions: </label>
      <input type= "text" name="recipe[instructions]" value=<%= @recipe.instructions %>>
      <br>
      <label for "notes">Notes: </label>
      <input type= "text" name="recipe[notes]" value=<%= @recipe.notes %>>
      <br>
      <input type= "submit" value="Update">
      </form>
